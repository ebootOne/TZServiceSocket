<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.main.accessible.tz.MainActivity.MainActivityStates" />
        <variable
            name="clickProxy"
            type="com.main.accessible.tz.MainActivity.ProxyClick" />
       <import type="android.content.Context"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/btn_wza"
            android:text="获取悬浮权限"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/remark_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/user_id_edit"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            android:hint="备注名和id"
            android:text="@={vm.editText}"
            />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/user_id_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btn_wza"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:hint="填写官方会员ID"
        android:inputType="number"
        android:text="@={vm.userId}"
        />
        <Button
            android:id="@+id/btn_wza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()-> clickProxy.onStart()}"
            android:text="@{vm.isOnLine ? @string/off_tz_list : @string/join_tz_list}"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="在线状态："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@{vm.isOnLine}"
            android:text="@{vm.isOnLine ? @string/on_line : @string/off_line}"/>
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>